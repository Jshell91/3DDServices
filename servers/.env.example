# Game Server Monitor - Environment Variables Template
# Copy this file to .env and fill in your values

# API Configuration
GSM_PORT=3001
GSM_API_KEY=your_secure_api_key_here

# Security Configuration (comma-separated IPs)
GSM_ALLOWED_IPS=127.0.0.1,::1,your_api_server_ip,your_game_server_ip,your_dev_ip

# Monitoring Configuration  
GSM_CHECK_INTERVAL=30000
GSM_CACHE_DURATION=300000

# Logging
GSM_LOG_LEVEL=info
GSM_LOG_DIR=./logs